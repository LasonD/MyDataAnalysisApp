<Window x:Class="DataAnalysisApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DataAnalysisApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="0.2*"></RowDefinition>
        </Grid.RowDefinitions>

        <TextBox Text="Paste text here or browse for a file"></TextBox>

        <Button Grid.Row="1" Width="50" Height="50" x:Name="BrowseBtn" Content="Browse" HorizontalAlignment="Left" Margin="20 0 0 0"></Button>

        <Button Grid.Row="1" Width="150" Height="50" x:Name="AnalyzeBtn" Content="Analyze"></Button>
        
    </Grid>
</Window>
